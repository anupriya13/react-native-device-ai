<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Enhanced NuGet configuration to prevent build hangs -->
  <config>
    <!-- Prevent hanging during package restoration -->
    <add key="http_proxy.user" value="" />
    <add key="http_proxy.password" value="" />
    <add key="globalPackagesFolder" value="packages" />
    <add key="repositoryPath" value="packages" />
    <!-- Timeout configurations to prevent hanging -->
    <add key="http_proxy.timeout" value="30" />
    <add key="maxHttpRequestsPerSource" value="4" />
    <add key="signatureValidationMode" value="require" />
  </config>
  
  <packageSources>
    <!-- Use official NuGet sources with timeout protection -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <add key="Microsoft Visual Studio Offline Packages" value="C:\Program Files (x86)\Microsoft SDKs\NuGetPackages\" />
  </packageSources>
  
  <!-- Package management settings to prevent conflicts -->
  <packageManagement>
    <add key="format" value="1" />
    <add key="disabled" value="False" />
  </packageManagement>
  
  <!-- Timeout settings for package operations -->
  <bindingRedirects>
    <add key="skip" value="False" />
  </bindingRedirects>
</configuration>
