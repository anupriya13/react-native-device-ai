{
  "name": "react-native-device-ai",
  "version": "1.0.0",
  "description": "Cross-platform React Native module that generates AI-powered insights and recommendations about the user's device.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "prepare": "npm run lint",
    "codegen": "react-native codegen",
    "codegen-android": "react-native codegen --platform android",
    "codegen-ios": "react-native codegen --platform ios",
    "codegen-windows": "echo 'Windows codegen is integrated with React Native Windows build process. See windows/DeviceAIFabric/codegen/' && ls -la windows/DeviceAIFabric/codegen/",
    "init-windows": "npx react-native-windows-init --projectType lib --language cpp",
    "init-windows-help": "echo 'Use: npm run init-windows' && echo 'This creates a C++ library project for Windows TurboModule development' && echo 'Note: --template cpp-lib option does not exist. Use --projectType lib --language cpp instead'"
  },
  "keywords": [
    "react-native",
    "device",
    "ai",
    "insights",
    "performance",
    "battery",
    "azure",
    "openai",
    "windows"
  ],
  "author": "Anupriya Verma",
  "license": "MIT",
  "peerDependencies": {
    "react-native": ">=0.70.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@react-native-community/cli": "latest",
    "eslint": "^8.57.1",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "react-native": "^0.79.0",
    "react-native-windows": "^0.79.0",
    "react-native-windows-init": "^1.4.79"
  },
  "codegenConfig": {
    "name": "DeviceAISpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.deviceai"
    },
    "windows": {
      "namespace": "ReactNativeDeviceAI",
      "outputDir": "windows/DeviceAIFabric/codegen"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anupriya13/react-native-device-ai.git"
  },
  "bugs": {
    "url": "https://github.com/anupriya13/react-native-device-ai/issues"
  },
  "homepage": "https://github.com/anupriya13/react-native-device-ai#readme",
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "index.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testEnvironment": "node"
  }
}
